@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2></h2>

<p>
    <a asp-action="Create">
        <button class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"> Adicionar</span>
        </button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><input type="button" class="btn btn-success btn-xs" value="Editar" /></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><input type="button" class="btn btn-primary btn-xs" value="Detalhar" /></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><input type="button" class="btn btn-danger btn-xs" value="Deletar" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
